<div class="container subscription-container">
  <div class="row">
  <%  if (typeof subs !== "undefined" && subs.length > 0) { %>
      <% subs.forEach((subscription) => { %>
      <div class="col-sm-10">
        <h1><%= subscription.title %></h1>
        <h2 class="subscription-category"><%= subscription.interest %></h2>
        <p class="subscription-description"><%= subscription.description %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8">
        <img class="subscription-image" src="<%= subscription.image %>">
      </div>
    </div>
  </div>

      <% }); %>
  <% } %>



